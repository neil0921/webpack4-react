# http://editorconfig.org
# 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# 匹配全部文件
[*]
#tab类型：空格（不使用制表符）
indent_style = space
#tab键长度是两个空格
indent_size = 2
#结尾换行符，win用crlf，linux/unix用lf，mac用cr
end_of_line = crlf
#文档的字符编码：使用UTF-8 - Unicode 字符编码；常见的字符编码有两种：1.UTF-8 - Unicode 字符编码；2.ISO-8859-1 - 拉丁字母表的字符编码。
charset = utf-8
#去掉每行代码最后多余的空格
trim_trailing_whitespace = true
#保存文件时，在最后一行后加上一行空行
insert_final_newline = true

[lib/**.js]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
